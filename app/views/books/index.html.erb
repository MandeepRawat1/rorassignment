
<div style="background-color: skyblue;height:884px;width: 1720px">

<div class="row">
<div class="container-fluid">
<div class="container">
<div class="col-lg-3 col-md-3 col-sm-3"></div>
<div class="col-lg-6 col-md-6 col-sm-6" style="background-color: white;margin-top: 200px;width: 100%;height: 100%">
	
	<h3>Listing Books

    <div style="float: right;margin-right: 10px;">
  <%= form_tag({}, {method: :get}) do %>
    <b>Book </b> <%= text_field_tag :term %>
    <%= submit_tag 'Search' %>
  <% end %>
</div></h3>


<table style="width: 100px;font-size: 20px;">
  <tr>

    <th style="padding-right: 50%;">Name</th>
    <th></th>
    <th></th>


    <th style="padding-right: 50%">Author</th>
    <th></th>
    <th></th>


    <th style="padding-right: 50%">Price</th>
    
    <th colspan="3"></th>




  </tr>
 
  <% @books.each do |book| %>
    <tr >
      <td><%= book.name %></td>
      <td></td>
      <td></td>


      <td><%= book.author %></td>
      <td></td>
      <td></td>

    

      <td><%= book.price %></td>
      <td></td>
      <td></td>

      <td style="padding-left: 10px"><%= link_to 'Show', book_path(book) %></td>
      <td></td>
      <td></td>
      <td style="padding-left: 10px"><%= link_to 'Edit', edit_book_path(book) %></td>
      <td></td>
      <td></td>

       <td style="padding-left: 10px"><%= link_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>

  <% end %>
</table>
<br>
<br>
<div style="font-size: 20px">
<%= link_to 'New',new_book_path %>
<br>
<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
<br>


</div>
</div>
<div class="col-lg-3 col-md-3 col-sm-3"></div>
</div>
</div>
</div>




</div>
</html>

